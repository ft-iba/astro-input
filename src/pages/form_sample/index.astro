---
import InputItemVertical from '@components/InputItemVertical.astro';
import Layout from '@layouts/Layout.astro';
---

<Layout>
	<section class="formSample">
		<h1 class="formSample__title">form sample page</h1>
    <form id="sampleForm">
      <!-- <h2 class="formSample__sectionTitle">form</h2> -->
      <!-- <InputItemVertical title='type search'>
      <input
        type="search"
        name="search_type"
        class="formSample__input"/>
      </InputItemVertical> -->

      <InputItemVertical title='お名前'>
        <div class="formSample__row">
          <div class="formSample__rowItem">
            <label class="formSample__label" for="family-name">姓</label>
            <div class="formSample__target">
              <input type="text" name="family-name" autocomplete="family-name" class="formSample__input" placeholder="田中" data-size="small"/>
            </div>
          </div>
          <div class="formSample__rowItem">
            <label class="formSample__label" for="given-name">名</label>
            <div class="formSample__target">
              <input type="text" name="given-name" autocomplete="given-name" class="formSample__input" placeholder="太郎" data-size="small"/>
            </div>
          </div>
        </div>
      </InputItemVertical>
      <InputItemVertical title='電話番号'>
        <input
          type="tel"
          name="tel"
          autocomplete="tel"
          class="formSample__input"
          placeholder="09000000000"
        />
      </InputItemVertical>
      <InputItemVertical title='郵便番号'>
        <input
          type="text"
          name="postal-code"
          autocomplete="postal-code"
          class="formSample__input"
          placeholder="郵便番号"/>
      </InputItemVertical>
      <InputItemVertical title='都道府県'>
        <input
          type="text"
          name="address-level1"
          autocomplete="address-level1"
          class="formSample__input"
          placeholder="東京都"/>
      </InputItemVertical>
      <InputItemVertical title='市区町村'>
        <input
          type="text"
          name="address-level2"
          autocomplete="address-level2"
          class="formSample__input"
          placeholder="中央区"/>
      </InputItemVertical>
      <InputItemVertical title='番地等'>
        <input
          type="text"
          name="address-line1"
          autocomplete="address-line1"
          class="formSample__input"
          placeholder="◯丁目◯番"/>
      </InputItemVertical>
      <InputItemVertical title='建物名・部屋番号等'>
        <input
          type="text"
          name="address-line2"
          autocomplete="address-line2"
          class="formSample__input"
          placeholder="コーポ◯◯ 101号室"/>
      </InputItemVertical>
      <InputItemVertical title='メールアドレス'>
        <input
          type="email"
          name="email"
          autocomplete="email"
          class="formSample__input"
          placeholder="yourname@example.com"
        />
      </InputItemVertical>
      <InputItemVertical title='お勤め先'>
        <input
          type="text"
          name="organization"
          autocomplete="organization"
          autocorrect="off"
          autocapitalize="off"
          class="formSample__input"
          placeholder="◯◯株式会社"/>
      </InputItemVertical>
      <InputItemVertical title='生年月日'>
        <div class="formSample__row">
          <div class="formSample__rowItem">
            <select
              class="formSample__select"
              title="生年月日(西暦)"
              name="bday-year"
              autocomplete="bday-year"
            >
              <option selected="">----</option>
              <option value="2010">2010</option>
              <option value="2009">2009</option>
              <option value="2008">2008</option>
              <option value="2007">2007</option>
              <option value="2006">2006</option>
              <option value="2005">2005</option>
              <option value="2004">2004</option>
              <option value="2003">2003</option>
              <option value="2002">2002</option>
              <option value="2001">2001</option>
              <option value="2000">2000</option>
              <option value="1999">1999</option>
